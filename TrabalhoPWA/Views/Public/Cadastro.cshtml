
@model Buffet.ViewModel.CadastroViewModel

@{
    ViewData["Title"] = "Cadastro";
}

<link rel="stylesheet" href="~/css/site.css"/>

<div style="margin-left: 300px; margin-right: 300px">
    <h1>Cadastrar Usuário</h1>
    
    
   
    
    <form method="post" action="/public/cadastro">
         @if (Model.Mensagem != null)
            {
                <strong class="alert-info"> @Model.Mensagem </strong>
            }
         
        <div class="form-group">
            <label for="email">E-mail:</label>
            <input class="form-control" type="text" id="email" name="email" required="true"></input>
        </div>

        <div class="form-group">
            <label for="senha">Senha:</label>
            <input class="form-control" type="password" id="senha" name="senha" required="true"></input>
        </div>

        <div class="form-group">
            <label for="senhaConfirmacao">Confirmação de senha:</label>
            <input class="form-control" type="password" id="senhaConfirmacao" name="senhaConfirmacao" required="true"></input>
        </div>

        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Cadastrar"/>
        </div>
    </form>

    <div class="text-center">
        <br>
        <a asp-controller="Public" asp-action="Login"> Voltar ao login</a> <br>
        <a asp-controller="Public" asp-action="Recuperacao"> Esqueceu sua senha? </a>
    </div>
</div>